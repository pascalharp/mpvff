{

  "manifest_version": 2,
  "name": "mpvff",
  "version": "0.1",

  "description": "automatically play videos with mpv instead of Firefox's integrated player",

  "homepage_url": "https://github.com/pascalharp/mpvff",

  "permissions": [
    "tabs",
    "nativeMessaging"
  ],

  "applications": {
    "gecko": {
      "id": "mpvff@pascalharprecht.de",
      "strict_min_version": "50.0"
    }
  },

  "icons": {
    "48": "icons/icon.png"
  },

  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "mpvff"
  },

  "background": {
    "scripts": [
      "main.js"
    ]
  }
}
